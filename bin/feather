#!/usr/bin/env node

var Liftoff = require('liftoff');
var argv = require('minimist')(process.argv.slice(2));
var path = require('path');
var cli = new Liftoff({
    configName: 'conf/conf',
    processTitle: 'feather2',
    moduleName: 'feather2',
    extensions: {
        '.js': null
    }
});

if(!argv.r && !argv.root){
    argv.r = process.cwd();
}

cli.launch({
    cwd: (argv.r || argv.root),
    configPath: argv.f || argv.file
}, function(env){
    var feather;
    
    env.modulePath = path.join(__dirname, '../index.js');
    feather = require(env.modulePath);
    feather.set('system.localNPMFolder', path.join(env.cwd, 'node_modules'));
    feather.set('system.globalNPMFolder', path.dirname(__dirname));
    feather.cli.run(argv, env);
});
